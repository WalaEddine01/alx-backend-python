#!/bin/bash

# Script: kubctl-0x01
# Purpose: Scale Django app to 3 replicas and test load handling

DEPLOYMENT_NAME="django-messaging-deployment"
SERVICE_PORT=8000

echo "ğŸ” Scaling deployment '$DEPLOYMENT_NAME' to 3 replicas..."
kubectl scale deployment "$DEPLOYMENT_NAME" --replicas=3

echo "â³ Waiting for pods to be ready..."
sleep 10

echo "ğŸ“¦ Verifying running pods..."
kubectl get pods -l app=django-messaging

echo "ğŸ“¡ Exposing service temporarily for load testing via NodePort..."
kubectl expose deployment "$DEPLOYMENT_NAME" --type=NodePort --name=django-messaging-external --port=$SERVICE_PORT

NODE_PORT=$(kubectl get service django-messaging-external -o jsonpath='{.spec.ports[0].nodePort}')
NODE_IP=$(minikube ip)
URL="http://$NODE_IP:$NODE_PORT"

echo "ğŸ§ª Running load test using wrk against $URL"
wrk -t4 -c50 -d10s "$URL" || echo "âš ï¸ wrk may not be installed or service not reachable"

echo "ğŸ“Š Monitoring resource usage..."
kubectl top pods

echo "ğŸ§¹ Cleaning up temporary service..."
kubectl delete service django-messaging-external

echo "âœ… Done."
