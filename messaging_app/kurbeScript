#!/bin/bash

# kurbeScript - Start Kubernetes cluster and verify it's running

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed. Please install it first."
    exit 1
fi

echo "ğŸ” Checking if kubectl is installed..."
if ! command -v kubectl &> /dev/null; then
    echo "âŒ kubectl is not installed. Please install it first."
    exit 1
fi

echo "ğŸš€ Starting Minikube cluster..."
minikube start

if [ $? -ne 0 ]; then
    echo "âŒ Failed to start Minikube."
    exit 1
fi

echo "âœ… Minikube started."

echo "ğŸ“¡ Getting cluster information..."
kubectl cluster-info

if [ $? -ne 0 ]; then
    echo "âŒ Failed to retrieve cluster info."
    exit 1
fi

echo "ğŸ“¦ Getting list of pods (all namespaces)..."
kubectl get pods --all-namespaces

echo "âœ… Cluster setup complete!"
